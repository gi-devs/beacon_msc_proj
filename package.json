{
  "name": "beacon",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:mobile": "npm run start -w mobile",
    "dev:server": "npm run dev -w server",
    "dev:infra": "docker compose up -d",
    "dev": "concurrently --kill-others-on-fail --names \"infra,server\" --prefix-colors \"cyan,yellow\" \"npm run dev:infra\" \"npm run dev:server\" && docker compose down",
    "test": "npm run test -w server && npm run test -w mobile",
    "test:mobile": "npm run test -w mobile",
    "test:server": "npm run test -w server",
    "prisma:studio": "npm run prisma:studio -w server",
    "prisma:migrate": "npm run migrate -w server",
    "prisma:migrate_deploy": "npm run migrate:deploy -w server",
    "prisma:generate": "npm run generate -w server",
    "prisma:push": "npm run push -w server",
    "prisma:seed": "npm run seed -w server"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.0",
    "ngeohash": "^0.6.3",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/ngeohash": "^0.6.8",
    "concurrently": "^9.2.0",
    "eslint": "^9.31.0",
    "jest": "^30.0.4",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
