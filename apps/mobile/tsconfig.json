{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/packages/*": [
        "../../packages/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types",
      "../../node_modules/@types",
      "../../packages/types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}