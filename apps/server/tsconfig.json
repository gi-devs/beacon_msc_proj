{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@beacon/*": ["../../packages/*/src"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "express", "jest"]
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules", "dist", "tests"]
}
