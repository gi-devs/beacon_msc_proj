generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(cuid())
  email           String   @unique
  username        String   @unique
  password        String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  isEmailVerified Boolean  @default(false)

  // relationships
  pushToken      PushToken?     @relation("UserPushToken")
  currentSession Session?       @relation("UserCurrentSession")
  MoodLogs       MoodLog[]      @relation("UserMoodLog")
  JournalEntries JournalEntry[] @relation("UserJournalEntry")

  dailyCheckIn        DailyCheckIn[]
  NotificationSetting NotificationSetting? @relation("UserNotificationSetting")
  LocationSetting     LocationSetting?     @relation("UserLocationSetting")
  beacons             Beacon[]
  beaconNotification  BeaconNotification[]
  BeaconReplies       BeaconReply[]

  CommutityRooms    CommunityRoom[]
  CommutityRoomPost CommunityRoomPost[]
}

model NotificationSetting {
  userId                String   @id @unique
  push                  Boolean  @default(true)
  maxBeaconPushes       Int      @default(3)
  minBeaconPushInterval Int      @default(7200) // in seconds (1 hour)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  user User @relation("UserNotificationSetting", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model LocationSetting {
  userId       String   @id @unique
  geohash      String?
  beaconRadius Int      @default(500) // in meters - determines how far you can be to receive another users beacon push
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation("UserLocationSetting", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Session {
  token     String   @id @default(cuid())
  userId    String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
  updatedAt DateTime @updatedAt

  user User @relation("UserCurrentSession", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, token])
}

model PushToken {
  userId    String   @unique
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation("UserPushToken", fields: [userId], references: [id], onDelete: Cascade)
}

model MoodLog {
  id           Int      @id @default(autoincrement())
  userId       String
  stressScale  Int
  anxietyScale Int
  sadnessScale Int
  stressNote   String?
  anxietyNote  String?
  sadnessNote  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relationships
  journalEntryId Int?
  JournalEntry   JournalEntry? @relation("MoodLogJournalEntry")

  user         User          @relation("UserMoodLog", fields: [userId], references: [id], onDelete: Cascade)
  DailyCheckIn DailyCheckIn? @relation("DailyCheckInMoodLog")

  @@index([userId, createdAt])
}

model JournalEntry {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  moodFace  Int
  tags      Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  moodLogId Int?     @unique
  moodLog   MoodLog? @relation("MoodLogJournalEntry", fields: [moodLogId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation("UserJournalEntry", fields: [userId], references: [id], onDelete: Cascade)
}

model DailyCheckIn {
  userId      String
  date        DateTime
  broadcasted Boolean  @default(false)
  createdAt   DateTime @default(now())

  // Relationships
  moodLogId Int     @unique
  MoodLog   MoodLog @relation("DailyCheckInMoodLog", fields: [moodLogId], references: [id], onDelete: Cascade)
  User      User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  Beacon Beacon?

  @@id([userId, date])
}

model Beacon {
  id                Int      @id @default(autoincrement())
  userId            String
  dailyCheckInDate  DateTime
  expiresAt         DateTime
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  active            Boolean  @default(true)
  userNotifiedStage Int      @default(0) // stage of user notification (0: not notified, 1: notified, 2: half-way, 3: last notif)

  // Relationships
  user               User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  dailyCheckIn       DailyCheckIn         @relation(fields: [userId, dailyCheckInDate], references: [userId, date], onDelete: Cascade)
  beaconNotification BeaconNotification[]
  BeaconReplies      BeaconReply[]

  @@unique([userId, dailyCheckInDate])
}

model BeaconNotification {
  id         Int                      @id @default(autoincrement())
  userId     String
  beaconId   Int
  createdAt  DateTime                 @default(now())
  updatedAt  DateTime                 @default(now()) @updatedAt
  notifiedAt DateTime?
  status     BeaconNotificationStatus @default(PENDING) // pending, sent, failed

  // Relationships
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  beacon      Beacon       @relation(fields: [beaconId], references: [id], onDelete: Cascade)
  beaconReply BeaconReply?

  @@unique([userId, beaconId])
}

model BeaconReply {
  id           Int      @id @default(autoincrement())
  beaconId     Int
  replierId    String
  createdAt    DateTime @default(now())
  replyTextKey String // matches the key of the text in the application JSON file
  replyTextId  Int // matches the id of list of texts in the application JSON file

  beacon             Beacon             @relation(fields: [beaconId], references: [id], onDelete: Cascade)
  replier            User               @relation(fields: [replierId], references: [id], onDelete: Cascade)
  beaconNotification BeaconNotification @relation(fields: [replierId, beaconId], references: [userId, beaconId], onDelete: Cascade)

  @@unique([replierId, beaconId])
}

model CommunityRoom {
  id                 String              @id @default(cuid())
  roomName           String
  expiresAt          DateTime
  createdAt          DateTime            @default(now())
  members            User[]
  communityRoomPosts CommunityRoomPost[]
}

model CommunityRoomPost {
  id         Int      @id @default(autoincrement())
  roomId     String
  postUserId String
  title      String
  content    String
  moodFace   Int      @default(50)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  room     CommunityRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)
  postUser User          @relation(fields: [postUserId], references: [id], onDelete: Cascade)

  @@index([roomId, createdAt])
}

enum BeaconNotificationStatus {
  PENDING
  SENT
  REPLIED
  OWNER_NOTIFIED
  DECLINED
  CANCELLED
}
