{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./apps/*/src"],
      "@beacon/*": ["./packages/*/src"],
    },

    "typeRoots": [
      "./node_modules/@types",
      "./packages/types",
      "./apps/*/src/types"
    ],
    "types": ["node", "jest"]
  }
}
